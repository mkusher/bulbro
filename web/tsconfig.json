{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": ".",
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"lib": ["es2024", "dom", "dom.iterable"],
		"paths": {
			"@/*": ["src/*"],
			"react": ["../node_modules/preact/compat/"],
			"react/jsx-runtime": ["../node_modules/preact/jsx-runtime"],
			"react-dom": ["../node_modules/preact/compat/"],
			"react-dom/*": ["../node_modules/preact/compat/*"]
		}
	},
	"include": ["src/**/*.ts"]
}
