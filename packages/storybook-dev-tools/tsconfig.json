{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
